{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
   "MySql": "Server=localhost;Database=roadside;User=root;Password=####"
  },
  "Jwt": {
    "SecretKey": "####",
    "Issuer": "https://localhost:7032",
    "Audience": "https://localhost:7032",
    "ExpiryMinutes": 3,
    "ClientId": "####",
    "ClientSecret": "####"
  },
  "EmailConfig": {
    "To": "####",
    "From": "####",
    "SmtpServer": "####",
    "Port": 587,
    "UserName": "####",
    "Password": "####",
    "SslConnection": false
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Email" ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{MachineName} {ClientIp} {UserAgent} {NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine} {MachineName} {ClientIp} {UserAgent} {NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error"
        }
      } //,
      //{
      //  "Name": "Email",
      //  "Args": {
      //    "from": "####",
      //    "to": "####",
      //    "host": "####",
      //    "subject": "APi Error",
      //    "connectionSecurity": "None",
      //    "body": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine} {MachineName} {ClientIp} {UserAgent} {NewLine}{Exception}",
      //    "restrictedToMinimumLevel": "Error"
      //  }
      //}
    ],
    "Enrich": [
      "WithMachineName",
      "WithClientIp",
      {
        "Name": "WithRequestHeader",
        "Args": { "headerName": "User-Agent" }
      }
    ]
  }
}
