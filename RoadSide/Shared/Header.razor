@using RoadSide.Helpers

@inject NavigationManager _navigationManager

<div class="headerDiv">
    <nav class="navbar">
        <div class="container-fluid">

            <span class="navbar-brand mb-0 h1">
                <img src="images/roadside_40.png" class="headerImage" />
                <span class="headerText">Roadside</span>
            </span>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </div>

        <div class="offcanvas offcanvas-end" id="navbarNav">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Options</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/SignOut">Sign Out</a>
                </li>
            </ul>
        </div>
    </nav>

</div>

@code {

    public void SignOut()
    {
        _navigationManager.NavigateTo("SignOut");
    }
}
